  <style>
    .carousel-container {
      perspective: 1000px;
    }
    
    .carousel-slide {
      backface-visibility: hidden;
    }
    
    .line-clamp-3 {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
  
  <!-- Script pour le carousel automatique -->
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.querySelector('.carousel-container');
    const slides = document.querySelectorAll('.carousel-slide');
    const prevBtn = document.querySelector('.carousel-prev');
    const nextBtn = document.querySelector('.carousel-next');
    const indicators = document.querySelectorAll('.carousel-indicator');
    
    let currentIndex = 0;
    let intervalId;
    const slideInterval = 5000; // 5 secondes
    
    // Fonction pour afficher un slide spécifique
    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.style.opacity = i === index ? '1' : '0';
      });
      
      indicators.forEach((indicator, i) => {
        indicator.classList.toggle('bg-white', i === index);
        indicator.classList.toggle('w-6', i === index);
        indicator.classList.toggle('w-3', i !== index);
      });
      
      currentIndex = index;
    }
    
    // Fonction pour passer au slide suivant
    function nextSlide() {
      const newIndex = (currentIndex + 1) % slides.length;
      showSlide(newIndex);
    }
    
    // Fonction pour démarrer l'auto-rotation
    function startAutoRotation() {
      intervalId = setInterval(nextSlide, slideInterval);
    }
    
    // Événements
    prevBtn.addEventListener('click', () => {
      clearInterval(intervalId);
      const newIndex = (currentIndex - 1 + slides.length) % slides.length;
      showSlide(newIndex);
      startAutoRotation();
    });
    
    nextBtn.addEventListener('click', () => {
      clearInterval(intervalId);
      nextSlide();
      startAutoRotation();
    });
    
    indicators.forEach((indicator, i) => {
      indicator.addEventListener('click', () => {
        clearInterval(intervalId);
        showSlide(i);
        startAutoRotation();
      });
    });
    
    // Démarrer l'auto-rotation
    startAutoRotation();
    
    // Pause au survol
    container.addEventListener('mouseenter', () => clearInterval(intervalId));
    container.addEventListener('mouseleave', startAutoRotation);
  });
  </script>
  