<script>  
    document.querySelectorAll('.video').forEach(video => {  
        video.addEventListener('mouseover', () => {  
            playVideo(video);  
        });  

        video.addEventListener('mouseleave', () => {  
            pauseVideo(video);  
        });  

        // Événements tactiles pour les appareils mobiles  
        video.addEventListener('touchstart', () => {  
            playVideo(video);  
        });  

        video.addEventListener('touchend', () => {  
            pauseVideo(video);  
        });  
    });  

    function playVideo(video) {  
        video.play(); // Commence à jouer la vidéo  
        setTimeout(() => {  
            video.pause(); // Arrête la vidéo après 30 secondes  
        }, 30000); // 30000 millisecondes = 30 secondes  
    }  

    function pauseVideo(video) {  
        video.pause(); // Arrête la vidéo lorsque la souris quitte l'élément ou relâche le doigt  
        video.currentTime = 0; // Remet la vidéo au début  
    }  
</script>          
